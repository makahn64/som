<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appdelegates.solbrandam"
    android:versionCode="1"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="11" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="com.appdelegates.solbrandam.SOLBrandAmMainActivity"
            android:label="4G LTE Speed Challenge Sign-In"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
        
        </intent-filter>
        </activity>
        <activity android:name="com.appdelegates.solbrandam.SettingsActivity"
            android:label="4G LTE Speed Challenge Settings"
            android:screenOrientation="portrait"/>
        <activity android:name="com.appdelegates.solbrandam.LeaderboardControlActivity"
            android:label="4G LTE Speed Challenge Leaderboard Settings"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity android:name="com.appdelegates.solbrandam.StatsActivity"
            android:label="4G LTE Speed Challenge Stats"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        
      
       
    </application>

</manifest>